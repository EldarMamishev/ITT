@model string

@{
    Layout = "_AccountLayout";
    ViewData["Title"] = "Login";
}

<div class="container-login go-register">
    <div class="form__container form__container-login">
        <form asp-action="Login" class="form">
            <input value="@Model" class="d-none" name="ReturnUrl" />
            <h3 class="form__heading">Sign In</h3>
            <input type="email" name="email" placeholder="email" class="form__field">
            <input type="password" name="password" placeholder="password" class="form__field">
            <a asp-action="ForgetPassword" class="form__text d-block">Forgot password?</a>
            
            <div class="text-danger" asp-validation-summary="ModelOnly"></div>

            <button type="submit" class="btn btn--main">Sign In</button>
        </form>
    </div>
    <div class="form__container form__container-register">
        <form asp-action="RegisterNewStudentUser" class="form">
            <input value="@Model" class="d-none" name="ReturnUrl" />
            <h3 class="form__heading">Create Account</h3>
            <input type="text" name="username" placeholder="username" class="form__field">
            <input type="email" name="email" placeholder="email" class="form__field">
            <input type="password" name="password" placeholder="password" class="form__field">
            <input type="password" name="confirmPassword" placeholder="confirm password" class="form__field">

            <div class="text-danger" id="registerErrorMessage" asp-validation-summary="ModelOnly"></div>

            <button type="submit" class="btn btn--main">Sign Up</button>
        </form>
    </div>
    <div class="overlay-container">
        <div class="overlay overlay--right">
            <h3 class="overlay__heading">Hello Friend!</h3>
            <p class="overlay__desc">Enter your personal details and start journey with us</p>
            <button type="button" id="go-register" class="btn btn--main-outline">Sign Up</button>
        </div>
        <div class="overlay overlay--left">
            <h3 class="overlay__heading">Welcome Back!</h3>
            <p class="overlay__desc">Keep connected with us please login with your personal info</p>
            <button type="button" id="go-login" class="btn btn--main-outline">Sign In</button>
        </div>
    </div>
</div>

<script src="~/js/pages/login.js"></script>