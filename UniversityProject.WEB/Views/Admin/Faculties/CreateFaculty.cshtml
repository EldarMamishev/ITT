@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "CreateFaculty";
}

<section class="panel important">
    <div class="panel-navbar">
        <h2 class="panel-navbar-title">Створення факультету</h2>
    </div>
</section>

<section class="panel important">
    <form asp-action="CreateFaculty" class="form">
        <h3 class="section-title">Інформація</h3>
        <div class="section-form">
            <div class="form-group">
                <label for="" class="form__field__label">Назва<span>*</span></label>
                <input type="text" name="name" class="form__field">
            </div>
            <div class="form-group">
                <label for="" class="form__field__label">Шифр<span>*</span></label>
                <input type="text" name="cipher" class="form__field">
            </div>
            <div class="form-group">
                <label for="" class="form__field__label">Знаходження</label>
                <input type="text" name="address" class="form__field">
            </div>
            <div class="form-group">
                <label for="" class="form__field__label">Моб. телефон<span>*</span></label>
                <input type="text" name="phoneNumber" class="form__field">
            </div>
        </div>

        <div class="text-danger" asp-validation-summary="ModelOnly"></div>

        <a asp-action="ShowFaculties" class="btn btn--main-outline">Повернутися</a>
        <button type="submit" class="btn btn--main">Зберегти</button>
    </form>
</section>