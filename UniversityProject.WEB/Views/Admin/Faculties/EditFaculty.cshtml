@using UniversityProject.ViewModels.Faculty
@model EditFacultyAdminView
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "EditFaculty";
}

<section class="panel important">
    <div class="panel-navbar">
        <h2>Edit Faculty</h2>
    </div>
</section>

<section class="panel important">
    <form asp-action="EditFaculty" class="form">
        <input type="hidden" name="id" value="@Model.Id" />
        <h3 class="section-title">Faculty information</h3>
        <div class="section-form">
            <div class="form-group">
                <label for="" class="form__field__label">Name<span>*</span></label>
                <input type="text" name="name" class="form__field" value="@Model.Name">
            </div>
            <div class="form-group">
                <label for="" class="form__field__label">Cipher<span>*</span></label>
                <input type="text" name="cipher" class="form__field" value="@Model.Cipher">
            </div>
            <div class="form-group">
                <label for="" class="form__field__label">Address</label>
                <input type="text" name="address" class="form__field" value="@Model.Address">
            </div>
            <div class="form-group">
                <label for="" class="form__field__label">Phone Number<span>*</span></label>
                <input type="text" name="phoneNumber" class="form__field" value="@Model.PhoneNumber">
            </div>
            <div class="form-group">
                <label for="" class="form__field__label">Students Count</label>
                <input type="number" name="studentsCount" class="form__field" value="@Model.StudentsCount">
            </div>
        </div>

        <div class="text-danger" asp-validation-summary="ModelOnly"></div>

        <a asp-action="ShowFaculties" class="btn btn--main-outline">Go Back</a>
        <button type="submit" class="btn btn--main">Edit Faculty</button>
    </form>
</section>
