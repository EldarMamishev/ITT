@using UniversityProject.ViewModels.AdminViewModels.GroupViewModels
@model CreateGroupDataAdminView
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Create Group";
}

<link href="~/lib/kendo/kendo.common-material.css" rel="stylesheet" />
<link href="~/lib/kendo/kendo.material.css" rel="stylesheet" />
<link href="~/lib/kendo/kendo.material.mobile.css" rel="stylesheet" />

<section class="panel important">
    <div class="panel-navbar">
        <h2 class="panel-navbar-title">Створення групи</h2>
    </div>
</section>

<form asp-action="CreateGroup" class="form">
    <section class="panel important">
        <h3 class="section-title">Інформація</h3>
        <div class="form-group">
            <label for="" class="form__field__label">Факультет</label>
            @Html.DropDownList(string.Empty, new SelectList(Model.Faculties, "Id", "FacultyName"),
        htmlAttributes: new { @class = "form__field", @name = "facultyId", @id = "facultyBox" })
        </div>
        <div class="form-group">
            <label for="" class="form__field__label">Кафедра</label>
            @Html.DropDownList(string.Empty, new SelectList(Model.Chairs, "Id", "ChairName"),
         htmlAttributes: new { @class = "form__field", @name = "chairId", @id = "chairBox" })
        </div>
        <div class="form-group">
            <label for="" class="form__field__label">Номер групи</label>
            <input type="text" name="groupNumber" class="form__field">
        </div>
        <div class="form-group">
            @{
                var courses = Model.CourseNumberTypes.Select(item => new SelectListItem
                {
                    Text = item.ToString(),
                    Value = item.ToString()
                });
            }
            <label for="" class="form__field__label">Курс</label>
            @Html.DropDownList(string.Empty, new SelectList(courses, "Text", "Value"),
        htmlAttributes: new { @class = "form__field", @name = "courseNumberTypeId" })
        </div>
        <div class="form-group">
            <label for="" class="form__field__label">Рік створення</label>
            <input id="yearpicker" name="creationYear" />
        </div>

        <div class="text-danger" asp-validation-summary="ModelOnly"></div>

        <a asp-action="ShowGroups" class="btn btn--main-outline">Повернутися</a>
        <button type="submit" class="btn btn--main">Зберегти</button>
    </section>
</form>

<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/lib/kendo/kendo.all.min.js"></script>
<script src="~/js/pages/createGroup.js"></script>