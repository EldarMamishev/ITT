@using UniversityProject.ViewModels.Faculty
@model ShowFacultiesAdminView
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Faculty";
}

<link href="~/lib/kendo/kendo.common-material.css" rel="stylesheet" />
<link href="~/lib/kendo/kendo.material.css" rel="stylesheet" />
<link href="~/lib/kendo/kendo.material.mobile.css" rel="stylesheet" />

<div class="modal fade" id="confirmDelete" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog  modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <div class="delete-profile-header">
                    <h3>Delete Faculty</h3>
                    <i class="fa fa-times" aria-hidden="true" onclick="closeModal()"></i>
                </div>
            </div>
            <div class="modal-body text-center">
                Are you sure to delete item?
            </div>
            <div class="modal-footer justify-content-center">
                <button type="button" class="btn confirm-button" onclick="confirmDelete()">Confirm</button>
                <button type="button" class="btn cancel-button" onclick="closeModal()">Cancel</button>
            </div>
        </div>
    </div>
</div>

<section class="panel important">
    <div class="panel-navbar">
        <h2>Faculties</h2>
        <a asp-action="CreateFaculty" id="go-login" class="btn btn--main-outline">Create Faculty</a>
    </div>
</section>

<div class="panel important">
    <div id="grid"></div>
    <div id="details"></div>
</div>

<script type="text/x-kendo-template" id="template">
    <div id="details-container">
        <h4>Faculty: <em>#= name #</em></h4><br />
        <h4>Cipher: <em>#= cipher #</em></h4><br />
        <h4>Address: <em>#= address #</em></h4><br />
        <h4>PhoneNumber: <em>#= phoneNumber #</em></h4> 
    </div>
</script>
<script>
    var faculties = @Html.Raw(Json.Serialize(Model.Faculties));
</script>
<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/lib/kendo/kendo.all.min.js"></script>
<script src="~/js/pages/faculty.js"></script>