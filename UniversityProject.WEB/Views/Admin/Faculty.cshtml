@using UniversityProject.ViewModels.Faculty
@model ShowFacultiesAdminView
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Faculty";
}

<link href="~/lib/kendo/kendo.common-material.css" rel="stylesheet" />
<link href="~/lib/kendo/kendo.material.css" rel="stylesheet" />
<link href="~/lib/kendo/kendo.material.mobile.css" rel="stylesheet" />

<section class="panel important">
    <div class="panel-navbar">
        <h2>Faculties</h2>
        <a asp-action="CreateFaculty" id="go-login" class="btn btn--main-outline">Create Faculty</a>
    </div>
</section>

<div class="panel important">
    <div id="grid"></div>
    <div id="details"></div>
</div>

<script type="text/x-kendo-template" id="template">
    <div id="details-container">
        <h2>#= Name # #= Cipher # #= PhoneNumber #</h2>
    </div>
</script>
<script>
    var faculties = @Html.Raw(Json.Serialize(Model.Faculties));
</script>
<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/lib/kendo/kendo.all.min.js"></script>
<script src="~/js/pages/faculty.js"></script>